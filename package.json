{
  "name": "react-task-tracker",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "concurrently": "^7.2.2",
    "json-server": "^0.17.0"
  },
  "scripts": {
    "start": "concurrently \"json-server --watch db.json --port 5000\" \"react-scripts start\"",
    "build": "json-server --watch db.json --port 5000 --static ./public"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
